---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: kubearmor-policies
  namespace: flux-system
spec:
  dependsOn:
    - name: kubearmor-config
  path: /clusters/security/infra/kubearmor/policies
  prune: false
  sourceRef:
    kind: GitRepository
    name: flux-system
  wait: true
  interval: 1m0s
  retryInterval: 1m0s
  timeout: 5m0s